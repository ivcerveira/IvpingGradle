<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ivpinggradle.IvpingGradleController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu text="_Arquivo">
                    <MenuItem fx:id="menuClose" accelerator="Ctrl+Q" onAction="#handleCloseApp" text="Fe_char" />
                </Menu>

                <Menu text="_Ferramentas">
                    <MenuItem mnemonicParsing="false" text="Ping" />
                </Menu>
                <Menu text="Aj_uda">
                    <MenuItem onAction="#showAboutDialog" text="_Sobre" />
                </Menu>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <Button fx:id="btnPing" mnemonicParsing="false" onAction="#onPingClicked" text="Ping" />
                <CheckBox fx:id="chkPingContinuous" text="-t" />
                <Pane prefWidth="10.0" />
                <Button fx:id="btnSsh" mnemonicParsing="false" onAction="#onSshClicked" text="SSH" />
                <Pane prefWidth="10.0" />
                <TextField fx:id="txtSearch" prefWidth="200.0" promptText="Pesquisar..." />
                <Button mnemonicParsing="false" onAction="#onClearClicked" text="âœ–" style="-fx-font-size: 14px; -fx-text-fill: gray;" />

            </ToolBar>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableView" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colHost" prefWidth="75.0" text="Hostname" />
                <TableColumn fx:id="colIp" prefWidth="75.0" text="IP Address" />
                <TableColumn fx:id="colLocation" prefWidth="75.0" text="Device Location" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
